# ===========================================
# Hotel Booking API - Environment Variables
# ===========================================

# Application Configuration
NODE_ENV=dev
PORT=3000

# Database Configuration
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_NAME=hotel_booking_db
DB_SYNC=true

# JWT Authentication
JWT_TOKEN_SECRET=your_super_secret_jwt_key_here_minimum_32_characters
JWT_TOKEN_EXPIRATION=3600
JWT_TOKEN_AUDIENCE=hotel-booking-api
JWT_TOKEN_ISSUER=hotel-booking-api

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL_SECONDS=120
CACHE_MAX_ITEMS=1000

# Stripe Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here
EMAIL_FROM=noreply@yourhotel.com

# SMS Configuration (for notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
